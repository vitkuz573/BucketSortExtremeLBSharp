<Window x:Class="BucketSortExtremeLBSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Курсовой проект. Алгоритм сортировки Bucket Sort. Закон распределения случайных величин ExtremeLB" Height="600" Width="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <StackPanel Margin="10">
                <Label Content="A:"/>
                <TextBox x:Name="ATextBox" Width="100" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="B:"/>
                <TextBox x:Name="BTextBox" Width="100" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="C:"/>
                <TextBox x:Name="CTextBox" Width="100" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="Размер:"/>
                <TextBox x:Name="SizeTextBox" Width="100" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <CheckBox x:Name="DescendingCheckBox" Content="По убыванию"/>
                <Button x:Name="SortButton" Content="Отсортировать" Width="100" Click="GenerateAndSortButton_Click"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Button x:Name="PerformanceTestButton" Content="Тест производительности" Width="150" Click="PerformanceTestButton_Click"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Button x:Name="ClearButton" Content="Очистить все" Width="150" Click="ClearButton_Click"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="Сравнения:"/>
                <TextBox x:Name="ComparisonCountTextBox" Width="100" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="Перестановки:"/>
                <TextBox x:Name="SwapCountTextBox" Width="100" IsReadOnly="True"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10">
                <Label Content="Исходный массив:"/>

                <ListView x:Name="InputListBox" Height="200">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Индекс" Width="50" DisplayMemberBinding="{Binding Index}"/>
                            <GridViewColumn Header="Значение" Width="100" DisplayMemberBinding="{Binding Value}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Label Content="Отсортированный массив:"/>

                <ListView x:Name="OutputListBox" Height="200">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Индекс" Width="50" DisplayMemberBinding="{Binding Index}"/>
                            <GridViewColumn Header="Значение" Width="100" DisplayMemberBinding="{Binding Value}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <oxy:PlotView x:Name="plotView" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
