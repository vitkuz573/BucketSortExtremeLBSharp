<Window x:Class="BucketSortExtremeLBSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <StackPanel Margin="10">
                <Label Content="A:"/>
                <TextBox x:Name="ATextBox" Width="150" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="B:"/>
                <TextBox x:Name="BTextBox" Width="150" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="C:"/>
                <TextBox x:Name="CTextBox" Width="150" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <StackPanel Margin="10">
                <Label Content="Размер:"/>
                <TextBox x:Name="SizeTextBox" Width="150" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="Минимум:"/>
                <TextBox x:Name="MinRangeTextBox" Width="150" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Margin="10">
                <Label Content="Максимум:"/>
                <TextBox x:Name="MaxRangeTextBox" Width="150" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <Button x:Name="GenerateButton" Content="Сгенерировать" Width="150" Margin="10"/>
            <CheckBox x:Name="DescendingCheckBox" Content="По убыванию" Margin="10"/>
            <Button x:Name="SortButton" Content="Сортировать" Width="150" Margin="10"/>
            <Button x:Name="PerformanceTestButton" Content="Тест производительности" Width="200" Margin="10"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <Label Content="Input:"/>
                <TextBox x:Name="InputTextBox" TextWrapping="Wrap" Height="300"/>
                <Label Content="Output:" Margin="0,10,0,0"/>
                <TextBox x:Name="OutputTextBox" TextWrapping="Wrap" Height="300"/>
            </StackPanel>

            <oxy:PlotView x:Name="plotView" Grid.Column="1" Margin="10"/>
        </Grid>
    </Grid>
</Window>
