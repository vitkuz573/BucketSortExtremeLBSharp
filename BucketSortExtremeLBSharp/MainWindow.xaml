<Window x:Class="BucketSortExtremeLBSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Bucket Sort Extreme" Height="600" Width="800">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Bucket Sort">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!-- Parameter input -->
                    <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Header="Parameters">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label Content="A:"/>
                            <TextBox Width="60" Margin="5" Name="ATextBox" />
                            <Label Content="B:"/>
                            <TextBox Width="60" Margin="5" Name="BTextBox" />
                            <Label Content="C:"/>
                            <TextBox Width="60" Margin="5" Name="CTextBox" />
                            <Label Content="Size:"/>
                            <TextBox Width="60" Margin="5" Name="SizeTextBox" />
                            <CheckBox Margin="5" Name="DescendingCheckBox" Content="Descending" />
                            <Button Width="120" Margin="5" Name="GenerateAndSortButton" Content="Generate and Sort" Click="GenerateAndSortButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Input list -->
                    <GroupBox Grid.Row="1" Grid.Column="0" Header="Input">
                        <ListView Name="InputListView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Index" DisplayMemberBinding="{Binding Index}" />
                                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <!-- Output list -->
                    <GroupBox Grid.Row="1" Grid.Column="1" Header="Output">
                        <ListView Name="OutputListView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Index" DisplayMemberBinding="{Binding Index}" />
                                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <!-- Result information -->
                    <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Result">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label Content="Comparisons:"/>
                            <TextBox Width="100" Margin="5" Name="ComparisonCountTextBox" IsReadOnly="True" />
                            <Label Content="Swaps:"/>
                            <TextBox Width="100" Margin="5" Name="SwapCountTextBox" IsReadOnly="True" />
                            <Label Content="Elapsed Time:"/>
                            <TextBox Width="100" Margin="5" Name="ElapsedTimeTextBox" IsReadOnly="True" />
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Performance Test">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Performance test -->
                    <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Header="Performance Test">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label Content="Test Count:"/>
                            <TextBox Width="60" Margin="5" Name="TestCountTextBox" />
                            <Button Width="120" Margin="5" Name="RunPerformanceTestButton" Content="Run Test" Click="RunPerformanceTestButton_Click" />
                        </StackPanel>
                    </GroupBox>

                    <!-- Performance plot -->
                    <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Performance Plot">
                        <oxy:PlotView x:Name="PerformanceTestPlot" />
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
